
{
  "entities": {
    "UserAccount": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserAccount",
      "type": "object",
      "description": "Represents a user account within the WellTrack Community platform. Now includes career profile fields.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user account (matches Firebase Auth UID)." },
        "clerkId": { "type": "string", "description": "The Clerk.dev User ID associated with this account." },
        "email": { "type": "string", "description": "User's email address.", "format": "email" },
        "displayName": { "type": "string", "description": "User's display name." },
        "universityAffiliation": { "type": "string", "description": "The university the user is affiliated with." },
        "role": { "type": "string", "description": "User's role (e.g., student, professional)." },
        "profileId": { "type": "string", "description": "Reference to UserProfile." },
        
        "headline": { "type": "string", "description": "A short, professional headline." },
        "bio": { "type": "string", "description": "A longer biography for the user's career profile." },
        "education": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "institution": { "type": "string" },
              "degree": { "type": "string" },
              "field": { "type": "string" },
              "year": { "type": "string" }
            }
          }
        },
        "skills": { "type": "array", "items": { "type": "string" } },
        "careerInterest": { "type": "string" },
        "profilePicture": { "type": "string", "format": "uri" },
        "resumeUrl": { "type": "string", "format": "uri" },
        "socialLinks": {
          "type": "object",
          "properties": {
            "linkedin": { "type": "string", "format": "uri" },
            "github": { "type": "string", "format": "uri" },
            "twitter": { "type": "string", "format": "uri" },
            "portfolio": { "type": "string", "format": "uri" }
          }
        },
        "portfolioItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "description": { "type": "string" },
              "projectUrl": { "type": "string", "format": "uri" },
              "image": { "type": "string", "format": "uri" },
              "type": { "type": "string", "enum": ["project", "certificate"] }
            }
          }
        },
        "connectionsCount": { "type": "number" },
        "isPublic": { "type": "boolean", "default": true }
      },
      "required": ["id", "email", "displayName"]
    },
    "Connection": {
        "title": "Connection",
        "type": "object",
        "description": "Represents a connection request between two users.",
        "properties": {
            "senderId": { "type": "string" },
            "receiverId": { "type": "string" },
            "status": { "type": "string", "enum": ["pending", "accepted", "rejected"] },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["senderId", "receiverId", "status", "createdAt"]
    },
    "Conversation": {
        "title": "Conversation",
        "type": "object",
        "description": "Metadata for a chat conversation between users.",
        "properties": {
            "conversationId": { "type": "string" },
            "participants": { "type": "array", "items": { "type": "string" } },
            "lastMessage": { "type": "string" },
            "updatedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["conversationId", "participants", "updatedAt"]
    },
    "Message": {
        "title": "Message",
        "type": "object",
        "description": "A single message within a conversation.",
        "properties": {
            "senderId": { "type": "string" },
            "text": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "isRead": { "type": "boolean" }
        },
        "required": ["senderId", "text", "timestamp"]
    },
    "ProfileView": {
        "title": "Profile View",
        "type": "object",
        "description": "Tracks a view of a user's profile.",
        "properties": {
            "profileId": { "type": "string" },
            "viewerId": { "type": "string" },
            "viewedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["profileId", "viewerId", "viewedAt"]
    },
    "CareerHelpPost": {
        "title": "Career Help Post",
        "type": "object",
        "description": "A post from a student seeking career guidance or mentorship.",
        "properties": {
            "userId": { "type": "string" },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "tags": { "type": "array", "items": { "type": "string" } },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "title", "createdAt"]
    },
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents the profile information for a user.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the user profile." },
        "bio": { "type": "string", "description": "A short biography or description of the user." },
        "avatarUrl": { "type": "string", "description": "URL of the user's avatar image.", "format": "uri" },
        "location": { "type": "string", "description": "User's location." },
        "interests": { "type": "array", "description": "A list of user interests.", "items": { "type": "string" } }
      },
      "required": ["id"]
    },
    "StudyParticipantApplication": {
      "title": "Study Participant Application",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "fullName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "institution": { "type": "string" },
        "country": { "type": "string" },
        "areaOfInterest": { "type": "string" },
        "availability": { "type": "string" },
        "reasonToJoin": { "type": "string" },
        "status": { "type": "string", "enum": ["submitted", "approved", "rejected"] },
        "submittedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "fullName", "email", "institution", "country", "areaOfInterest", "availability", "status", "submittedAt"]
    },
    "StudentCommunityApplication": {
        "title": "Student Community Application",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "fullName": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "institution": { "type": "string" },
            "country": { "type": "string" },
            "fieldOfStudy": { "type": "string" },
            "interests": { "type": "array", "items": { "type": "string" } },
            "motivation": { "type": "string" },
            "status": { "type": "string", "enum": ["submitted", "approved", "rejected"] },
            "submittedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "fullName", "email", "institution", "country", "fieldOfStudy", "status", "submittedAt"]
    },
    "ProfessionalApplication": {
        "title": "Professional Application",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "fullName": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "professionalTitle": { "type": "string" },
            "organization": { "type": "string" },
            "country": { "type": "string" },
            "yearsOfExperience": { "type": "number" },
            "expertise": { "type": "string" },
            "availability": { "type": "string" },
            "message": { "type": "string" },
            "status": { "type": "string", "enum": ["submitted", "approved", "rejected"] },
            "submittedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "fullName", "email", "professionalTitle", "organization", "country", "expertise", "availability", "status", "submittedAt"]
    },
    "CircleApplication": {
        "title": "Circle Application",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "circleId": { "type": "string" },
            "introduction": { "type": "string" },
            "status": { "type": "string", "enum": ["submitted", "approved", "rejected"] },
            "submittedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "circleId", "introduction", "status", "submittedAt"]
    },
    "MentorApplication": {
        "title": "Mentor Application",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "fullName": { "type": "string" },
            "email": { "type": "string", "format": "email" },
            "linkedin": { "type": "string" },
            "country": { "type": "string" },
            "expertise": { "type": "string" },
            "experience": { "type": "number" },
            "availability": { "type": "string" },
            "motivation": { "type": "string" },
            "status": { "type": "string", "enum": ["submitted", "approved", "rejected"] },
            "submittedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "fullName", "email", "country", "expertise", "availability", "status", "submittedAt"]
    },
    "Subscription": {
        "title": "Email Subscription",
        "type": "object",
        "properties": {
            "email": { "type": "string", "format": "email" },
            "subscribedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["email", "subscribedAt"]
    },
    "Asm1Session": {
      "title": "ASM1 Session",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "status": { "type": "string", "enum": ["in_progress", "completed", "saved"] },
        "startedAt": { "type": "string", "format": "date-time" },
        "completedAt": { "type": "string", "format": "date-time" },
        "lastSavedAt": { "type": "string", "format": "date-time" },
        "total_score": { "type": "number" },
        "version": { "type": "string" },
        "answers": { 
          "type": "object",
          "patternProperties": {
            "^[0-9]+$": { "type": "number" }
          }
        },
        "optionalAnswers": {
          "type": "object",
           "patternProperties": {
            "^[0-9]+$": { "type": "string" }
          }
        }
      },
      "required": ["userId", "status", "startedAt"]
    },
    "Asm1Report": {
        "title": "ASM1 Report",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "sessionId": { "type": "string" },
            "score": { "type": "number" },
            "category": { "type": "string" },
            "summary": { "type": "string" },
            "suggestions": { "type": "array", "items": { "type": "string" } },
            "top_distortions": { "type": "array", "items": { "type": "string" } },
            "completedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "sessionId", "score", "category", "completedAt"]
    },
    "Asm2Session": {
      "title": "ASM2 Session",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "status": { "type": "string", "enum": ["learning", "assessment", "report"] },
        "startedAt": { "type": "string", "format": "date-time" },
        "completedAt": { "type": "string", "format": "date-time" },
        "lastSavedAt": { "type": "string", "format": "date-time" },
        "total_score": { "type": "number" },
        "version": { "type": "string" },
        "answers": { "type": "object" },
        "completedModules": { "type": "array", "items": { "type": "string" }}
      },
      "required": ["userId", "status", "startedAt"]
    },
    "Asm2Report": {
        "title": "ASM2 Report",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "sessionId": { "type": "string" },
            "score": { "type": "number" },
            "category": { "type": "string" },
            "topicBreakdown": { "type": "array", "items": {"type": "object"} },
            "suggestions": { "type": "array", "items": { "type": "string" } },
            "completedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "sessionId", "score", "category", "completedAt"]
    },
    "AcademicCategory": {
      "title": "Academic Category",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "icon": { "type": "string" },
        "order": { "type": "number" },
        "isActive": { "type": "boolean" }
      },
      "required": ["id", "title", "order", "isActive"]
    },
    "AcademicTool": {
      "title": "Academic Tool",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "categoryId": { "type": "string" },
        "description": { "type": "string" },
        "duration": { "type": "string" },
        "difficulty": { "type": "string" },
        "contentType": { "type": "string", "enum": ["assessment", "guide", "tool"] },
        "redirectUrl": { "type": "string", "format": "uri-reference" },
        "thumbnail": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" },
        "isActive": { "type": "boolean" }
      },
      "required": ["id", "title", "categoryId", "contentType", "redirectUrl", "isActive"]
    },
    "AcademicArticle": {
      "title": "Academic Article",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "category": { "type": "string" },
        "content": { "type": "string" },
        "author": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "thumbnail": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "title", "content"]
    },
    "UserAcademicProgress": {
      "title": "User Academic Progress",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "lastAssessmentId": { "type": "string" },
        "scores": { "type": "object" },
        "recommendations": { "type": "array", "items": { "type": "string" } },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId"]
    },
    "AcademicChatSession": {
      "title": "Academic Chat Session",
      "type": "object",
      "properties": {
        "sessionId": { "type": "string" },
        "userId": { "type": "string" },
        "messages": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "from": { "type": "string", "enum": ["user", "bot"] },
              "text": { "type": "string" }
            },
            "required": ["from", "text"]
          } 
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["sessionId", "userId", "messages"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
        "schema": { "$ref": "#/entities/UserAccount" },
        "description": "Stores user account and career profile information."
    },
     "/connections/{connectionId}": {
        "schema": { "$ref": "#/entities/Connection" },
        "description": "Stores connection requests between users."
    },
    "/conversations/{conversationId}": {
        "schema": { "$ref": "#/entities/Conversation" },
        "description": "Stores metadata for a chat conversation.",
        "subcollections": {
            "/messages/{messageId}": {
                "schema": { "$ref": "#/entities/Message" }
            }
        }
    },
    "/profile_views/{viewId}": {
        "schema": { "$ref": "#/entities/ProfileView" },
        "description": "Tracks profile view events."
    },
    "/career_help_posts/{postId}": {
        "schema": { "$ref": "#/entities/CareerHelpPost" },
        "description": "Stores posts from students seeking career help."
    },
    "/study_participants": {
        "schema": { "$ref": "#/entities/StudyParticipantApplication" },
        "description": "Stores applications to join study programs."
    },
    "/student_community_applications": {
        "schema": { "$ref": "#/entities/StudentCommunityApplication" },
        "description": "Stores applications from students to join the community."
    },
    "/professional_applications": {
        "schema": { "$ref": "#/entities/ProfessionalApplication" },
        "description": "Stores applications from professionals to join the community."
    },
    "/circle_applications": {
        "schema": { "$ref": "#/entities/CircleApplication" },
        "description": "Stores applications to join specific circles."
    },
    "/mentor_applications": {
        "schema": { "$ref": "#/entities/MentorApplication" },
        "description": "Stores applications from users wanting to become mentors."
    },
    "/subscriptions": {
        "schema": { "$ref": "#/entities/Subscription" },
        "description": "Stores email addresses for the newsletter."
    },
    "/asm1_sessions/{sessionId}": {
      "schema": { "$ref": "#/entities/Asm1Session" },
      "description": "Stores user assessment sessions for the ASM1 quiz."
    },
    "/asm1_reports/{reportId}": {
      "schema": { "$ref": "#/entities/Asm1Report" },
      "description": "Stores generated reports for completed ASM1 sessions."
    },
    "/asm2_sessions/{sessionId}": {
      "schema": { "$ref": "#/entities/Asm2Session" },
      "description": "Stores user assessment sessions for the ASM2 quiz."
    },
    "/asm2_reports/{reportId}": {
      "schema": { "$ref": "#/entities/Asm2Report" },
      "description": "Stores generated reports for completed ASM2 sessions."
    },
    "/academic_categories/{categoryId}": {
      "schema": { "$ref": "#/entities/AcademicCategory" },
      "description": "Stores categories for academic help resources."
    },
    "/academic_tools/{toolId}": {
      "schema": { "$ref": "#/entities/AcademicTool" },
      "description": "Stores individual academic tools, guides, and assessments."
    },
    "/academic_articles/{articleId}": {
      "schema": { "$ref": "#/entities/AcademicArticle" },
      "description": "Stores full articles for the knowledge library."
    },
    "/user_academic_progress/{userId}": {
      "schema": { "$ref": "#/entities/UserAcademicProgress" },
      "description": "Stores progress and recommendations for a user's academic journey."
    },
    "/academic_chat_sessions/{sessionId}": {
      "schema": { "$ref": "#/entities/AcademicChatSession" },
      "description": "Stores chat history between a user and the AI academic assistant."
    }
  }
}
