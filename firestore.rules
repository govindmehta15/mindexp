rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // --- User Profiles ---
    // Logged-in users can view all profiles
    // Users can only create/update their own profile
    match /users/{userId} {
      allow list, get: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    // --- Career & Connections ---
    match /connections/{connectionId} {
      allow read, update: if request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId;
      allow create: if request.auth.uid == request.resource.data.senderId;
    }

    match /conversations/{conversationId} {
      allow read, create: if request.auth.uid in resource.data.participants;
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }
    
    match /profile_views/{viewId} {
        allow create: if request.auth.uid == request.resource.data.viewerId;
    }

    match /career_help_posts/{postId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if request.auth.uid == resource.data.userId;
    }

    // --- Application Forms ---
    match /study_participants/{appId} {
      allow create: if request.auth.uid == request.resource.data.userId;
    }
     match /student_community_applications/{appId} {
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    match /professional_applications/{appId} {
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    match /circle_applications/{appId} {
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    match /mentor_applications/{appId} {
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // --- Subscriptions ---
    match /subscriptions/{subId} {
      allow create: if true; // Anyone can subscribe
    }

    // --- Academic Help Content (Publicly Readable) ---
    match /academic_categories/{categoryId} {
      allow get, list: if true;
    }
    match /academic_tools/{toolId} {
      allow get, list: if true;
    }
    match /academic_articles/{articleId} {
      allow get, list: if true;
    }
    match /user_academic_progress/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /academic_chat_sessions/{sessionId} {
       allow read, write: if request.auth.uid == resource.data.userId;
    }

    // --- Assessment 1 ---
    match /asm1_sessions/{sessionId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
    match /asm1_reports/{reportId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // --- Assessment 2 ---
    match /asm2_sessions/{sessionId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
    match /asm2_reports/{reportId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    // --- Assessment 3 ---
    match /asm3_sessions/{sessionId} {
      allow read, update: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    match /asm3_reports/{reportId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    // --- Assessment 4 ---
    match /asm4_sessions/{sessionId} {
      allow read, update: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    match /asm4_reports/{reportId} {
      allow read: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
